{
  "expo": {
    "name": "appy",
    "slug": "appy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
      
        "plugins": [
          [
            "expo-camera",
            {
              "cameraPermission": "Permita $(PRODUCT_NAME) acessar sua camera."
            }
          ],
          [
            "expo-media-library",
            {
              "photosPermisson": "Allow $(PRODUCT_NAME) to access your photos.",
              "savePhotosPermisson": "Allow $(PRODUCT_NAME) to save photos.",
              "isAccessMediaLocationEnabled": true
            }
          ],
          [
            "expo-barcode-scanner",
            {
              "cameraPermission":"Permita $(PRODUCT_NAME) acessar sua camera."
            }
          ]
        ]


  }
}
